<div class="row">
  <div class="col-sm-4">
    <h1>Create Tag</h1>
    <form action="/admin/tags/create" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" placeholder="Enter name" class="form-control">
      </div>
      <button type="submit" class="btn btn-primary">Create Tag</button>
    </form>
  </div>
  <br>
  <hr>
</div>

<br>
<div class="row">
  <div class="col-sm-8">
    <h1>Tags</h1>
    <table class="table">
      <thead>
        <tr>
          <th>id</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        {{#each tags}}
        <tr>
          <td>{{_id}}</td>
          <td>{{name}}</td>
          <td><a href="/admin/tags/edit/{{_id}}" class="btn btn-info">Edit</a></td>
          <td>
            <form action="/admin/tags/{{_id}}?_method=DELETE" method="post">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
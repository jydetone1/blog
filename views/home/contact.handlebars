{{#each errors}}
<div class="alert alert-danger">{{message}}</div>
{{else}}
{{/each}}
<div class="row postall py-5">
  <div class="col-md-6 mx-auto">
    <div class="card">
      <div class="card-body">
        <h1 class="text-center">Contact</h1>
        {{#each errors}}
        <div class="alert alert-danger">{{message}}</div>
        {{else}}
        {{/each}}
        <div id="alertMessage"></div>
        <form action="/contact" method="post" id="contactform" class="needs-validation" novalidate>
          <div class="form-group">
            <label for="name">Name</label>
            <input name="name" class="form-control" id="contact-name" type="text" placeholder="Enter name">
            <div class="alertError"></div>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input name="email" class="form-control" id="contact-email" type="email" placeholder="Enter email">
            <div class="alertEmail"></div>
          </div>
          <div class="form-group">
            <label for="message">Message</label>
            <textarea name="message" id="contact-message" class="form-control" rows="10" cols="30"></textarea>
            <div class="alertMessage"></div>
          </div>
          <button type="submit" class="btn btn-success mx-auto d-block" id="submit">Submit</button>
        </form>

      </div>
    </div>
  </div>
</div>
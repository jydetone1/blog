<div class="row postall pt-5">
  <div class="col-lg-6 mx-auto">
    <div class="card">
      <div class="card-body">
        <h1 class="text-center">Login</h1>
        {{#if error}}
        <div class="alert alert-danger">{{error}}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {{/if}}
        <form action="/user/login" method="post" id="loginform">
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input name="email" class="form-control myemail" id="exampleInputEmail1" type="email"
              aria-describedby="emailHelp" autocomplete="on" placeholder="Enter email" required>
            <div class="alertEmail"></div>
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="password" class="form-control" id="exampleInputPassword1" type="password" autocomplete="on"
              placeholder="Password" required>
            <div class="alertPassword"></div>
          </div>

          <button type="submit" id="submitform" class="btn btn-success mx-auto d-block">Login</button>
        </form>

      </div>
    </div>
  </div>
</div>